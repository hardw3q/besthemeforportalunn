{
  "manifest_version": 3,
  "name": "Dark UNN",
  "version": "1.3.1",
  "description": "Applies the dark theme to portal.unn.ru.",
  "icons": {
    "16": "icons/icon-active-16.png",
    "32": "icons/icon-active-32.png",
    "48": "icons/icon-active-48.png",
    "128": "icons/icon-active-128.png"
  },
  "action": {
    "default_title": "Dark UNN: переключить тему",
    "default_icon": {
      "16": "icons/icon-active-16.png",
      "32": "icons/icon-active-32.png",
      "48": "icons/icon-active-48.png",
      "128": "icons/icon-active-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://portal.unn.ru/*", "http://portal.unn.ru/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
